@model Salon.Models.Treatments
@{
    ViewBag.Title = "_TreatmentForm";
}

<h2>
    @Model.Title
</h2>

<div id="treatmentFormContainer">
    @foreach (var tStep in Model.TreatmentSteps) {
        <div class="form-group">
            <div class="col-sm-3">
                <label>
                    @tStep.Steps.Title
                </label>
            </div>
            <div class="col-sm-9">
                <input type="text" name="inp_step_@tStep.TreatmentId _@tStep.StepId" class="form-control" />
            </div>
        </div>
    }
</div>

<hr />


