    }-->
</div>

<div class="modal fade" role="dialog" id="modal_treatmentAllSteps_@Model.treatmentID">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Schritte ausw&auml;hlen</h4>
            </div>

            <div class="modal-body">
                <div class="list-group">
                    @{ bool selected = false; }
                    @foreach (var ts in Model.possibleTasks) {
                        foreach (var task in Model.tasks) {
                            if (ts.StepId == task.StepId) {
                                selected = true;
                                break;
                            } else {
                                selected = false;
                            }
                        }
                        if (selected) {
                            <a class="list-group-item active item_allTasks" data-stepId="@ts.StepId" data-treatmentId="@Model.treatmentID">
                                @ts.Steps.Title
                            </a>
                        } else {
                            <a class="list-group-item item_allTasks" data-stepId="@ts.StepId" data-treatmentId="@Model.treatmentID">
                                @ts.Steps.Title
                            </a>
                        }

                    }
                </div>
            </div>
        </div>
    </div>
</div>


